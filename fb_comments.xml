    <EnumValue value="1" display_value="In Tooltip"/>
    <EnumValue value="2" display_value="Inline Between Titles"/>
</UserPref>

<UserPref name="inline_sum_background" display_name="Inline Summary Background" default_value="F9F9F9"/>

